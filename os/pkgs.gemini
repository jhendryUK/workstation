#!/usr/bin/env bash

set -e

if [ $UID -ne 0 ]; then
    sudo "$0" $@
    exit 0
fi

# prep
apt-get update
apt-get -y dist-upgrade

# One time system update
# apt-get -y autoremove ; apt-get update ; apt-get -y upgrade ; apt-get -y autoremove

pkgs=""

# required for i3 setup
pkgs+=" i3 i3blocks scrot imagemagick xautolock rofi udiskie arandr pavucontrol pasystray"

# personal pkgs
pkgs+=" vim iftop nmap ipcalc openssh-server keychain git whois subversion fping dia minicom snmp net-tools vlc ipv6calc dstat ssh-askpass tmux x2goclient ipset synergy htop telnet"

# work packages
pkgs+=" python-pip virtualenv libyaml-perl ldapscripts libnet-ldap-perl libyaml-perl diffstat fabric expect socat graphviz csh dirmngr"
#pkgs+=" python-pip virtualenv libyaml-perl ldapscripts libnet-ldap-perl libyaml-perl diffstat fabric expect socat graphviz openjdk-8-jre icedtea-8-plugin csh"

# work gpg
# http://wiki.mintel.co.uk/?title=InfraTeamGPG/SystemsRequirements
pkgs+=" gpgv2 haveged ssss yubikey-personalization yubikey-personalization-gui scdaemon pass tree qtpass python3-gnupg"
#removed: pcscd pcsc-tools

apt-get install -y $pkgs
apt-get -y autoremove

echo "Finished..."
